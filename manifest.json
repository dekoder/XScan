{
   "background": {
      "page": "background.html"
   },
   "content_scripts": [
       {
          "matches": ["*://*/*"],
          "js": ["js/content.js"],
          "run_at": "document_start"
       }
   ],

   "browser_action": {
      "default_icon": {
         "19": "icon.png",
         "38": "icon.png"
      },
      "default_title": "X"
   },
  "manifest_version": 2,

  "name": "XScan",
  "description": "X",
  "version": "1.0",

  "permissions": [
    "cookies",
    "webRequest",
    "*://*/"
  ]
}
